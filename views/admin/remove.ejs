<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.min.css">
    <title>Remove Product</title>

</head>

<body>
    <div class="container">
        <h1 class="mt-5">Remove Product</h1>
        <form action="/admin/remove" method="POST" class="mt-3">
            <div class="form-group">
                <label for="productId">Select Product to Remove:</label>
                <select class="form-control" id="productId" name="productId">
                    <% products.forEach(product=> { %>
                        <option value="<%= product._id %>">
                            <%= product.name %>
                        </option>
                        <% }); %>
                </select>
            </div>
            <button type="submit" class="btn btn-danger">Remove Product</button>
        </form>
    </div>

    <!-- Bootstrap JS and jQuery (for dropdowns) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>